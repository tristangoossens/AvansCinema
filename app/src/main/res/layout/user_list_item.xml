<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/user_list_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/outer_background"
        android:paddingLeft="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="@color/outer_background"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:background="@drawable/linear_layout_list_item"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/user_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/title_color"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    tools:text="Titel" />

                <TextView
                    android:id="@+id/user_list_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="10sp"
                    android:textColor="@color/title_color"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    tools:text="(0 Items)" />
            </LinearLayout>

            <View style="@style/LineBreak"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/user_list_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textcolor"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Dit is een test. Deze lijst is gemaakt door het A+Team en word als voorbeeld getoond"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>